{
  "manifest_version": 2,

  "name": "All Leo All Day",
  "description": "Replaces images with my buddy Leo, because he's the man.",
  "version": "0.0.1",
  "background": {
    "scripts" : ["leo.js"]
  },

  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "icons": { "48": "lion48.png",
          "128": "lion128.png" },
  "browser_action": {
          "default_icon": {
	           "48": "lion48.png",
			   "128": "lion128.png"
          },
          "default_title": "LEO"
        },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["leo.js"]
    }
  ],
  "web_accessible_resources": [
    "Leo/*.jpg"
  ]
}

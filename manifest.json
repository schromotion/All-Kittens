{
  "manifest_version": 2,

  "name": "Make America Kittens Again",
  "description": "Replaces images of Donald Trump with kittens, because seriously, f*** that guy.",
  "version": "1.2.1",

  "permissions": [
    "storage",
    "contextMenus"
  ],
  "icons": { "48": "lion48.png",
          "128": "lion128.png" },
  "browser_action": {
          "default_icon": {
	           "48": "lion48.png",
			   "128": "lion128.png"
          },
          "default_title": "#MAKA"
        },

  "background": {
    "scripts": ["setmakamenu.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["maka.js"]
    }
  ],
  "web_accessible_resources": [
    "Leo/*.jpg"
  ]
}
